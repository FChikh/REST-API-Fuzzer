{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "cursor": {
      "description": "Specific location in some collection.",
      "type": "string"
    },
    "cursors": {
      "description": "Cursors before and after the current page.",
      "type": "object",
      "properties": {
        "before": { "$ref": "#/definitions/cursor" },
        "after": { "$ref": "#/definitions/cursor" }
      }
    },
    "paging": {
      "description": "Paging format.",
      "type": "object",
      "properties": {
        "cursors": { "$ref": "#/definitions/cursors" }
      },
      "required": ["cursors"]
    }
  },
  "type": "object",
  "$ref": "#/definitions/paging"
}
